
@{
    ViewData["Title"] = "Index";
}

@model List<ProductViewModel>

<h1>Product</h1>

<button class="btn btn-primary"><a style="text-decoration: none; color:white;" asp-area="" asp-controller="Product" asp-action="Add">Add</a></button>

<table class="table table-striped">
    <thead>
        <th>Id</th>
        <th>Name</th>
        <th>ContainsAlcohol</th>
        <th>Pic</th>
        <th></th>
    </thead>
    <tbody>
        @foreach (var product in @Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.ContainsAlcohol</td>
                <td>@product.Picture</td>
                <td>
                    <form asp-action="RemoveProduct" asp-route-id="@product.Id" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.Id">
                        Update
                    </a>
                </td>
            </tr>  
        }
    </tbody>
</table>

